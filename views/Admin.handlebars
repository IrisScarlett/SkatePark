    <h1>Skate Park</h1>

    <div class="py-4">
      <h2>Administración</h2>
      <hr class="w-50" />

      <table class="table w-50 m-auto">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Foto</th>
            <th scope="col">Nombre</th>
            <th scope="col">Años de experiencia</th>
            <th scope="col">Especialidad</th>
            <th scope="col">Estado</th>
          </tr>
        </thead>
        <tbody>
          {{#each skaters}}
          <tr>
            <th scope="row">{{@index}}</th>
            <td><div class="container m-auto"><img class="foto-perfil "src="/fotos/{{this.foto}}" width='100px'></div></td>
            <td>{{this.nombre}}</td>
            <td>{{this.anos_experiencia}}</td>
            <td>{{this.especialidad}}</td>
            <td><input type="checkbox" {{#if this.estado}} checked {{/if}} onclick='cambiarEstado({{this.id}}, this)'/></td>
          </tr>
          {{/each}}
          </tr>
        </tbody>
      </table>
    </div>

<script>
    const cambiarEstado = async (id, e) => {
    const estado = e.checked
    try{
      await axios.put('/usuarios', { id, estado })
    
    alert(estado ? 'Skater aprobado' : 'Skater en revisión')
    } catch ({ response }) {
      const { data } = response;
      const { error } = data;
      alert(error);
    }
  }
</script>