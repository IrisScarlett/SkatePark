<h1>Skate Park</h1>

<div class="py-4">
  <h2>Registro</h2>
  <hr class="w-50" />

  <form action='/skaters' method='POST' enctype="multipart/form-data">
    <div class="form-group row w-50 m-auto">
      <div class="form-group col-12 col-sm-6">
        <label>Email</label>
        <input class="form-control m-auto" id='email' name='email' />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Nombre</label>
        <input class="form-control m-auto" id='nombre' name='nombre' />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Password</label>
        <input class="form-control m-auto" id='password' type='password' name='password' />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Repita la password</label>
        <input class="form-control m-auto" id='password2' type='password' name='password2' />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Años de experiencia</label>
        <input class="form-control m-auto" id='anos_experiencia' name='anos_experiencia' />
      </div>
      <div class="form-group col-12 col-sm-6">
        <label>Especialidad</label>
        <input class="form-control m-auto" id='especialidad' name='especialidad' />
      </div>
      <div class="form-group col-12 col-sm-12">
        <label>Foto de perfil</label>
        <input type="file" id='foto' name='foto' />
      </div>
    </div>
    <button class="btn btn-info mb-3" type='submit'>Registrarme</button>
    <p><a href="/login"> Iniciar sesión</a></p>
  </form>
</div>

